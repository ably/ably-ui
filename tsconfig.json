{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "jsx": "react-jsx"
  },
  "include": ["./**/*.{ts,tsx}", "./global.d.ts"],
  "exclude": ["node_modules/**/*", "public"]
}
