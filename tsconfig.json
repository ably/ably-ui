{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "allowJs": true
  },
  "include": ["./**/*.ts", "./**/*.tsx", "global.d.ts"],
  "exclude": ["node_modules/**/*"]
}
