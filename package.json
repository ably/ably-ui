{
  "name": "@ably/ui",
  "version": "17.5.7",
  "description": "Home of the Ably design system library ([design.ably.com](https://design.ably.com)). It provides a showcase, development/test environment and a publishing pipeline for different distributables.",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ably/ably-ui.git"
  },
  "license": "Apache-2.0",
  "files": [
    "core",
    "reset",
    "tailwind.config.js",
    "tailwind.extend.js",
    "index.d.ts"
  ],
  "types": "index.d.ts",
  "msw": {
    "workerDirectory": "./public"
  },
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/test-runner": "^0.23.0",
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@swc/cli": "^0.7.3",
    "@swc/core": "^1.4.11",
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash.throttle": "^4.1.9",
    "@types/mixpanel-browser": "^2.60.0",
    "@types/node": "^20",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/svg-sprite": "^0.0.39",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@whitespace/storybook-addon-html": "^7.0.0",
    "autoprefixer": "^10.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-storybook": "^0.12.0",
    "heroicons": "^2.2.0",
    "http-server": "14.1.1",
    "jsdom": "^26.0.0",
    "mixpanel-browser": "^2.60.0",
    "msw": "2.10.2",
    "msw-storybook-addon": "^2.0.2",
    "playwright": "^1.49.1",
    "posthog-js": "^1.217.4",
    "prettier": "^3.2.5",
    "storybook": "^8.6.14",
    "storybook-dark-mode": "^4.0.2",
    "svg-sprite": "^2.0.4",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3",
    "vite": "^6.2.0",
    "vitest": "^3.0.8",
    "wait-on": "^8.0.3"
  },
  "scripts": {
    "build:prebuild": "rm -rf core reset && mkdir -p dist/core",
    "build:swc": "ts-node swc.config.ts",
    "build:tsc": "tsc && ts-node tsc.ts && rm -r types",
    "build:cleanup": "mv dist/* . && rm -r dist",
    "build:icons": "ts-node scripts/generate-icons.ts",
    "build": "pnpm build:prebuild && pnpm build:icons && pnpm build:swc && pnpm build:tsc && pnpm build:cleanup",
    "watch": "pnpm build:swc -w",
    "format:check": "prettier -c *.{js,ts} src/**/*.{js,ts,tsx,stories.tsx}",
    "format:write": "prettier -w *.{js,ts} src/**/*.{js,ts,tsx,stories.tsx}",
    "lint": "eslint *.{js,ts} src/**/*.{js,ts,tsx,stories.tsx}",
    "update:all": "./scripts/update-dependents.sh",
    "pre-release": "./scripts/pre-release.sh",
    "release": "./scripts/release.sh",
    "start": "vite --port 5000",
    "storybook": "pnpm build && storybook dev -p 6006",
    "build-storybook": "pnpm build && storybook build --quiet -o preview",
    "heroku-postbuild": "pnpm build-storybook && ./scripts/setup-auth.sh",
    "test": "pnpm test:storybook && pnpm test:vitest run",
    "test:storybook": "npx concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm build-storybook && pnpm http-server preview --port 6007 --silent\" \"wait-on tcp:6007 && pnpm test-storybook --url http://127.0.0.1:6007\"",
    "test:update-snapshots": "npx concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm build-storybook && pnpm http-server preview --port 6007 --silent\" \"wait-on tcp:6007 && pnpm test-storybook -u --url http://127.0.0.1:6007\"",
    "test:vitest": "vitest --environment=jsdom --dir=src"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-navigation-menu": "^1.2.4",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "array-flat-polyfill": "^1.0.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.4",
    "highlight.js": "^11.11.1",
    "highlightjs-curl": "^1.3.0",
    "js-cookie": "^3.0.5",
    "lodash.throttle": "^4.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "redux": "^4.0.5",
    "scroll-lock": "^2.1.4",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.5.5"
  },
  "peerDependencies": {
    "mixpanel-browser": "^2.60.0 || <3",
    "posthog-js": "^1.217.4 || <2"
  },
  "bugs": {
    "url": "https://github.com/ably/ably-ui/issues"
  },
  "homepage": "https://github.com/ably/ably-ui#readme",
  "keywords": [
    "ui",
    "tailwind",
    "ably",
    "react"
  ],
  "author": "Ably Real-time Ltd <support@ably.com>"
}
