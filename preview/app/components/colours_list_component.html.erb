  <% colours.each do |group| %>
    <h3 class="text-h2 font-medium mb-16"><%= group[:group_name] %></h3>

    <ul class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-32 mb-40">
      <% group[:group_colours].each do |color| %>
        <li>
          <%= tag.div class: ["w-full", "h-64", "mb-16", color[:bg]] %>
          <p class="text-p1 font-medium"><%= color[:name] %></p>
          <p class="text-p2 font-light">hex <%= color[:hex] %></p>
          <p class="text-p2 font-light">rgb <%= color[:rgb] %></p>
        </li>
      <% end %>
    </ul>
  <% end %>
