<%= render(TitleComponent.new(react: true, vw: true)) do %>
  Icon
<% end %>

<%= render partial: 'components/icon/arguments', locals: { component_parameters: component_parameters, framework: framework } %>

<h2 class="text-h2 mb-32 font-sans">Core Icons</h2>

<div class="grid grid-cols-4 ui-grid-gap">
  <% core_icons.each do |icon_name| %>
    <div class="border p-16">
      <code class="font-mono text-p2 mb-8 block"><%= icon_name %></code>
      <div class="border inline-flex flex-0">
        <%= render(AblyUi::Core::Icon.new(name: icon_name, size: 32, additional_css: "hover:text-active-orange")) %>
      </div>
    </div>
  <% end %>
</div>


<% content_for :component do %>
  <script type="text/javascript">
    document.body.classList.add("bg-light-grey", "m-32");
  </script>
<% end %>
