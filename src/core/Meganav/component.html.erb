<nav class="ui-meganav-wrapper" data-id="meganav" aria-label="Main">
  <div class="ui-meganav">
    <%= render(AblyUi::Core::Logo.new) %>

    <!-- Desktop nav items -->
    <ul class="hidden lg:flex">
      <% panels.each do |panel| %>
        <li class="ui-meganav-item">
          <%= render(AblyUi::Core::MeganavItemControl.new(aria_controls: panel[:id])) do %>
            <%= panel[:label] %>
          <% end %>

          <%= content_tag :div, class: 'ui-meganav-dropdown', data: { id: "meganav-dropdown" }, id: panel[:id] do %>
            <%= render(panel[:class].constantize.new) %>
          <% end %>
        </li>
      <% end %>
      <li>
        <a href="/pricing" class="ui-meganav-nav-item h-64 items-center flex">Pricing</a>
      </li>
    </ul>

    <!-- Signed-out nav items -->
    <% if @session_data[:signedIn] %>
      <ul class="hidden lg:flex items-center">
        <li class="ui-meganav-item relative">
          <%= render(AblyUi::Core::MeganavItemControl.new(aria_controls: "account-panel")) do %>
            <%= @session_data[:accountName] %>
          <% end %>

          <div class="ui-meganav-account-panel" id="account-panel">
            <p class="ui-meganav-overline mt-24 mx-16">Your account</p>
            <ul class="mb-16 mx-16">
              <% @session_data[:account][:links].each do |key, link| %>
                <li>
                  <%= link_to link[:text], link[:href], class: "ui-meganav-account-panel-link" %>
                </li>
              <% end %>
            </ul>

            <p class="ui-meganav-overline mx-16"><%= @session_data[:preferredEmail] %></p>
            <ul class="mb-8 mx-16">
              <li>
                <%= link_to @session_data[:mySettings][:text], @session_data[:mySettings][:href], class: "ui-meganav-account-panel-link" %>
              </li>
            </ul>

            <hr class="ui-meganav-hr mb-16" />

            <div className="mb-16 px-16">
              <% if @session_data[:logOut] %>
                <%= link_to @session_data[:logOut][:text], @session_data[:logOut][:href], method: :delete, class: "ui-meganav-account-panel-link" %>
              <% end %>
            </div>
          </div>
        </li>

        <% if @session_data[:account] %>
          <li class="ml-16">
            <%= link_to "Dashboard", @session_data[:account][:links][:dashboard][:href], class: "ui-btn-secondary" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <ul class="hidden lg:flex items-center">
        <li>
          <a href="/contact" class="ui-meganav-nav-item">Contact us</a>
        </li>
        <li>
          <a href="/login" class="ui-meganav-nav-item">Login</a>
        </li>
        <li class="ml-16">
          <a href="/sign-up" class="ui-btn">Sign up free</a>
        </li>
      </ul>
    <% end %>

    <!-- Mobile nav items -->
    <ul class="flex lg:hidden">
      <li>
        <a href="/login" class="ui-meganav-nav-item">Login</a>
      </li>
      <li class="ui-meganav-item">
        <%= render(AblyUi::Core::MobileMenuControl.new(aria_controls: "mobile-dropdown")) %>
        <div class="ui-meganav-mobile-dropdown" id="mobile-dropdown">
          <div class="py-16 px-24 md:px-32 lg:px-64 bg-white">
            <ul class="mb-16">
              <% panels.each do |panel| %>
                <li class="ui-meganav-mobile-item">
                  <%= render(AblyUi::Core::PanelOpenControl.new(aria_controls: "#{panel[:id]}-mobile")) do %>
                    <%= panel[:label] %>
                  <% end %>
                  <%= content_tag(:div, class: "ui-meganav-mobile-panel", id: "#{panel[:id]}-mobile") do %>
                    <%= render(AblyUi::Core::PanelCloseControl.new(aria_controls: "platform-panel-mobile")) %>
                    <%= render(AblyUi::Core::PlatformPanel.new) %>
                  <% end %>
                </li>
              <% end %>
              <li>
                <a href="/pricing" class="ui-meganav-mobile-link">
                  Pricing
                </a>
              </li>
            </ul>
            <hr class="ui-meganav-hr mb-20" />
            <div class="flex justify-between items-center mb-16">
              <a href="/contact" class="ui-meganav-nav-item ml-0 py-0">Contact us</a>
              <a href="/sign-up" class="ui-btn">Sign up free</a>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
</nav>
