<section class="w-full bg-white">
  <%= tag.ul class: ["py-64 flex flex-row flex-wrap md:flex-nowrap content-between m-auto items-center", @additional_css].join(' ') do %>
    <% companies.each do |company| %>
	    <li class="flex-auto text-center sm:w-1/3 w-1/2">
	      <%= image_tag company[:logo], alt: "#{company[:label]} logo", class: 'mx-auto' %>
	    </li>
    <% end %>
  <% end %>
</section>
