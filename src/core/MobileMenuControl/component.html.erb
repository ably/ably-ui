<%= button_tag(type: "button",
               class: "ui-meganav-nav-item mr-0 py-16 focus:outline-none",
               data: { id: "meganav-mobile-menu" },
               aria: { expanded: false, controls: @aria_controls }) do %>
  <%= tag.svg class: ["h-24", "w-24", theme(:mobile_menu_color)] do %>
    <%= tag.use href: "#{asset_path 'ably_ui/core/sprites.svg'}#sprite-menu" %>
  <% end %>

  <%= tag.svg class: ["h-24", "w-24", "hidden", theme(:mobile_menu_color)] do %>
    <%= tag.use href: "#{asset_path 'ably_ui/core/sprites.svg'}#sprite-close" %>
  <% end %>
<% end %>
