# http://editorconfig.org

root = true

[*]
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
max_line_length = 80

[*.md]
trim_trailing_whitespace = false

[*.{css,html,js,jsx,json,rb,erb}]
charset = utf-8

[*.{html,jsx,erb,json}]
max_line_length = 160
